// * mixins.styl

// Mixins for use in all sheets

i = !important

a(c = color-a)
    if c is "visited"
        c = color-a-visited
    color c i

background-color(c = color-background)
    if c is "highlight"
        c = color-background-highlight
    if c is "highlight-extra"
        c = color-background-highlight-extra
    background-color c i

background(c = color-background)
    background c i

bold()
    font-weight bold i

border-color(args...)
    if args
        c = args
    else
        c = color-border
    border-color c i

border-color-all(args...)
    if args
        c = args
    else
        c = color-border
    border-color c
    border-top-color c i
    border-bottom-color c i
    border-left-color c i
    border-right-color c i

color(c = color-text)
    color c i
